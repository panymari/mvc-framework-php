<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ ROOT_REF }}/assets/css/styles.css" type="text/css">
</head>
<body>
<div class="container">
    <h2 class="center">Authentication</h2>
    <form method="post" action="" class="row g-3 needs-validation" novalidate>
        <div class="form-group field">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Enter name" required>
            <div class="invalid-feedback">
                Invalid name.
            </div>
        </div>
        <div class="form-group field">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter email" required>
            <div class="invalid-feedback">
                Invalid email.
            </div>
        </div>
        <div class="form-group field">
            <label for="gender">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Enter password"
                   required>
            <div class="invalid-feedback">
                Invalid password.
            </div>
        </div>
        <input name="submit" type="submit" class="btn btn-primary top" value="Log in">
    </form>
</div>
<!-- Modal validation -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header red">
                <h5 class="modal-title">Error</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>{{ error }}</p>
                {{ message }}
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
        integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
        crossorigin="anonymous"></script>
<script src="{{ ROOT_REF }}/assets/js/script.js"></script>
{% if error is defined %}
    <script type="text/javascript">$("#myModal").modal("show");</script>
{% endif %}
{% for field in fields %}
    {% if field is same as("name")  %}
        <script type="text/javascript">
            const nameField = document.getElementById("name");
            nameField.classList.toggle('is-invalid');
        </script>
    {% endif %}
    {% if field is same as("email")  %}
    <script type="text/javascript">
        const emailField = document.getElementById("email");
        emailField.classList.toggle('is-invalid');
    </script>
    {% endif %}
    {% if field is same as("password")  %}
    <script type="text/javascript">
        const passwordField = document.getElementById("password");
        passwordField.classList.toggle('is-invalid');
    </script>
    {% endif %}
{% endfor %}
</body>
</html>